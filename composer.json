{
    "name": "fakethinkpad85/flarum-fulltextsearch",
    "description": "Enables fulltext search in Flarum, instead of using whole word matching this allows part-word matches.",
    "version": "1.0.0",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "^1.0"
    },
    "authors": [
        {
            "name": "Christian Persson",
            "email": "fakethinkpad85@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/fakethinkpad85/flarum-fulltextsearch/issues",
        "source": "https://github.com/fakethinkpad85/flarum-fulltextsearch",
        "docs": "https://github.com/fakethinkpad85/flarum-fulltextsearch"
    },
    "autoload": {
        "psr-4": {
            "fakethinkpad85\\LikeSearch\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Like Search",
            "icon": {
                "name": "fas fa-search",
                "backgroundColor": "#3498db",
                "color": "#fff"
            }
        }
    }
}